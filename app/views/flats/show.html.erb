<h1><%= @flat.name %></h1>

<div class="ml-2">
  <p>Address: <%= @flat.address %></p>
  <p>Description: <%= @flat.description %></p>
  <p>Price: <i class="material-icons mr-2">euro</i><%= @flat.price_per_night %></p>
  <p>Capacity: <i class="material-icons mr-2">people</i><%= @flat.number_of_guests %></p>
</div>

<p class="text-center"><%= link_to 'Back', flats_path, class: "ml-2 card-link" %></p class="text-center">
<p class="text-center"><%= link_to 'Edit', edit_flat_path, class: "btn btn-danger ml-2 card-link" %></p>
<p class="text-center"><%= link_to '☠︎', flat_path(@flat), method: :delete, data: { confirm: 'Are you fucking sure?' }, class: "ml-2 card-link" %></p>

