<h1>All our Flats (<%= @flats.count %>)</h1>
<div class="container d-flex justify-content-start mt-3 wrap">
  <% @flats.each do |flat| %>
    <div class="card flat-card m-2" style="width: 12rem;">
        <img src="https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200" class="card-img-top" alt="...">

        <div class="p-1"style="height: 150px;">
          <h1><%= flat.name %></h1>
          <h3><%= flat.address %></h3>
        </div>
        <div class="d-flex justify-content-start" style="height: 40px;">
          <i class="material-icons mr-2">euro</i><%= flat.price_per_night %>
          <i class="material-icons mr-2">people</i><%= flat.number_of_guests %>
        </div>
        <div class="card-body p-2 border d-flex">
          <%= link_to 'More info', flat_path(flat), class:"card-link" %>
          <%= link_to 'Edit', edit_flat_path(flat), class:"card-link" %>
          <%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: 'Are you fucking sure?' }, class:"card-link" %>
        </div>
    </div>
  <% end %>
</div>
